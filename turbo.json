{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["dist/**", ".svelte-kit/**", ".vercel/**", ".build/**"]
    },
    "lint": {
      "dependsOn": ["^lint", "format"],
      "outputs": []
    },
    "format": {
      "dependsOn": ["^format"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
